<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="0dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <mamboa.yearview.YearView
            android:id="@+id/yearView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:current_year="2018"
            app:rows="4"
            app:columns="3"
            app:horizontal_spacing="25"
            app:vertical_spacing="10"
            app:title_gravity="right"
            app:firstDayOfWeek="monday"
            app:margin_below_month_name="20"
            app:today_background_color="#d10606"
            app:today_text_color="#fff"/>
    </LinearLayout>

</LinearLayout>