<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="0dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <mamboa.yearview.YearView
            android:id="@+id/yearView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:current_year="2019"
            app:rows="4"
            app:columns="3"
            app:horizontal_spacing="25"
            app:vertical_spacing="5"
            app:title_gravity="start"
            app:firstDayOfWeek="monday"
            app:margin_below_month_name="10"
            app:today_background_color="#d10606"
            app:text_color="@android:color/black"
            app:month_name_color="@android:color/holo_blue_dark"
            app:day_name_color="@android:color/holo_orange_dark"
            app:text_color_weekend="@android:color/holo_green_dark"
            app:weekend_days="@array/weekendDays"
            app:today_text_color="#fff"
            app:today_background_radius="5"
            app:today_background_shape="circle"
            app:today_font_type="bold"
            app:month_name_font_type="bold_italic"
            app:weekend_font_type="italic"
            app:week_name_font_type="bold"
            app:name_week_transcend_weekend="true"/>
    </LinearLayout>

</LinearLayout>