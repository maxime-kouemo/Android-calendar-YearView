<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <mamboa.yearview.YearView
            android:id="@+id/yearView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:current_year="2019"
            app:rows="4"
            app:columns="3"
            app:horizontal_spacing="25"
            app:vertical_spacing="10"
            app:title_gravity="end"
            app:firstDayOfWeek="sunday"
            app:margin_below_month_name="15"
            app:today_background_color="#d10606"
            app:text_color="@android:color/black"
            app:month_name_color="@android:color/holo_blue_dark"
            app:day_name_color="@android:color/holo_orange_dark"
            app:text_color_weekend="@android:color/holo_green_dark"
            app:weekend_days="@array/weekendDays"
            app:today_text_color="#fff"
            app:today_background_radius="10"
            app:today_background_shape="circle"
            app:today_font_type="bold"
            app:month_name_font_type="normal"
            app:weekend_font_type="bold_italic"
            app:day_name_font_type="bold"
            app:name_week_transcend_weekend="false"
            app:month_selection_color="@android:color/holo_purple"
            app:month_selection_margin="20"
            app:day_name_font="@font/calling_heart_custom"
            app:month_name_font="@font/pinch_my_ride_custom"
            app:weekend_font="@font/teddy_bears_custom"/>
    </LinearLayout>

</LinearLayout>